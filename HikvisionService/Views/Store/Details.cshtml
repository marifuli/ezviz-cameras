@model HikvisionService.Models.Store
@{
    ViewData["Title"] = "Store Details";
}

<div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Store Details</h1>
    <div class="flex space-x-2">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit
        </a>
        <a href="@Url.Action("Index")" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to List
        </a>
    </div>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden mb-8">
    <div class="p-6">
        <h2 class="text-xl font-semibold mb-4">Store Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <p class="text-sm font-medium text-gray-500">Name</p>
                <p class="text-lg">@Model.Name</p>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500">Cameras</p>
                <p class="text-lg">@Model.Cameras.Count</p>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500">Created At</p>
                <p class="text-lg">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500">Updated At</p>
                <p class="text-lg">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
            </div>
        </div>
    </div>
</div>

@if (Model.Cameras.Any())
{
    <h2 class="text-xl font-semibold mb-4">Cameras in this Store</h2>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Name
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        IP Address
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Port
                    </th>
                    <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var camera in Model.Cameras)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">@camera.Name</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@camera.IpAddress</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@camera.Port</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="@Url.Action("Details", "CameraView", new { id = camera.Id })" class="text-indigo-600 hover:text-indigo-900">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="bg-yellow-50 border border-yellow-400 text-yellow-700 p-4 rounded">
        <p>No cameras associated with this store.</p>
    </div>
}