@model HikvisionService.Models.Store
@{
    ViewData["Title"] = "Delete Store";
}

<div class="mb-6">
    <h1 class="text-2xl font-bold">Delete Store</h1>
    <p class="text-red-600 mt-2">Are you sure you want to delete this store?</p>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <p>@TempData["ErrorMessage"]</p>
    </div>
}

<div class="bg-white shadow-md rounded-lg overflow-hidden mb-6">
    <div class="p-6">
        <h2 class="text-xl font-semibold mb-4">Store Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <p class="text-sm font-medium text-gray-500">Name</p>
                <p class="text-lg">@Model.Name</p>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500">Cameras</p>
                <p class="text-lg">@Model.Cameras.Count</p>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500">Created At</p>
                <p class="text-lg">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500">Updated At</p>
                <p class="text-lg">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
            </div>
        </div>
    </div>
</div>

@if (Model.Cameras.Any())
{
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded mb-6">
        <p class="font-bold">Warning!</p>
        <p>This store has @Model.Cameras.Count associated camera(s). You must delete all cameras first before deleting this store.</p>
    </div>
}

<form asp-action="Delete" method="POST">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="flex space-x-4">
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline @(Model.Cameras.Any() ? "opacity-50 cursor-not-allowed" : "")" @(Model.Cameras.Any() ? "disabled" : "")>
            Delete
        </button>
        <a href="@Url.Action("Index")" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Cancel
        </a>
    </div>
</form>