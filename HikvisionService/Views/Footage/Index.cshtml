@model HikvisionService.Models.ViewModels.FootageViewModel
@{
    ViewData["Title"] = "Footage Archive";
}

<div class="container-fluid">
    <h1 class="mt-4">Footage Archive</h1>
    <p class="lead">Browse and download saved camera footage</p>
    
    <!-- Filter Form -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filter Options</h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" id="filterForm">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label for="SelectedCameraId">Camera</label>
                        <select class="form-control" asp-for="SelectedCameraId">
                            <option value="">All Cameras</option>
                            @foreach (var camera in Model.Cameras)
                            {
                                <option value="@camera.Id">@camera.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="StartDate">Start Date</label>
                        <input type="date" class="form-control" asp-for="StartDate" />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="EndDate">End Date</label>
                        <input type="date" class="form-control" asp-for="EndDate" />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label for="FileType">File Type</label>
                        <select class="form-control" asp-for="FileType">
                            <option value="both">All Files</option>
                            <option value="video">Videos Only</option>
                            <option value="photo">Photos Only</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter"></i> Apply Filters
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-sync"></i> Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Results -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Footage Files</h6>
            <div class="dropdown no-arrow">
                <span class="text-xs">Found @Model.Files.Count files</span>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Files.Any())
            {
                <div class="row">
                    @foreach (var file in Model.Files)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-img-top footage-thumbnail">
                                    @if (file.FileType == "video")
                                    {
                                        <div class="video-thumbnail">
                                            <img src="@file.ThumbnailPath" alt="Video thumbnail" class="img-fluid" />
                                            <div class="play-icon">
                                                <i class="fas fa-play-circle fa-3x"></i>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <img src="@file.ThumbnailPath" alt="Photo thumbnail" class="img-fluid" />
                                    }
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title text-truncate">@file.FileName</h5>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            <i class="fas fa-camera"></i> @file.CameraName<br />
                                            <i class="fas fa-calendar"></i> @file.FileStartTime.ToString("yyyy-MM-dd HH:mm")<br />
                                            <i class="fas fa-file"></i> @FormatBytes(file.FileSize)
                                        </small>
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100">
                                        @if (file.FileType == "video")
                                        {
                                            <button type="button" class="btn btn-sm btn-info play-video" data-path="@file.FilePath">
                                                <i class="fas fa-play"></i> Play
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-info view-image" data-path="@file.FilePath">
                                                <i class="fas fa-eye"></i> View
                                            </button>
                                        }
                                        <a href="@file.DownloadUrl" class="btn btn-sm btn-primary" download>
                                            <i class="fas fa-download"></i> Download
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-gray-300 mb-3"></i>
                    <p>No footage files found matching your criteria.</p>
                    <p>Try adjusting your filters or selecting a different date range.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Video Player Modal -->
<div class="modal fade" id="videoPlayerModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Video Player</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <video id="videoPlayer" controls class="w-100">
                    <source src="" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>
</div>

<!-- Image Viewer Modal -->
<div class="modal fade" id="imageViewerModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Image Viewer</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <img id="imageViewer" src="" alt="Full size image" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .footage-thumbnail {
            height: 150px;
            overflow: hidden;
            position: relative;
            background-color: #f8f9fc;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .footage-thumbnail img {
            max-height: 100%;
            object-fit: cover;
        }
        
        .video-thumbnail {
            position: relative;
            width: 100%;
            height: 100%;
        }
        
        .play-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: rgba(255, 255, 255, 0.8);
            text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize date pickers with formatted dates
            const startDate = '@Model.StartDate.ToString("yyyy-MM-dd")';
            const endDate = '@Model.EndDate.ToString("yyyy-MM-dd")';
            
            $('#StartDate').val(startDate);
            $('#EndDate').val(endDate);
            
            // Play video button
            $('.play-video').click(function() {
                const videoPath = $(this).data('path');
                $('#videoPlayer source').attr('src', '/Footage/Download?path=' + encodeURIComponent(videoPath));
                $('#videoPlayer')[0].load();
                $('#videoPlayerModal').modal('show');
            });
            
            // View image button
            $('.view-image').click(function() {
                const imagePath = $(this).data('path');
                $('#imageViewer').attr('src', '/Footage/Download?path=' + encodeURIComponent(imagePath));
                $('#imageViewerModal').modal('show');
            });
            
            // Stop video when modal is closed
            $('#videoPlayerModal').on('hidden.bs.modal', function () {
                $('#videoPlayer')[0].pause();
            });
        });
    </script>
}

@functions {
    public string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        int order = 0;
        double size = bytes;
        
        while (size >= 1024 && order < sizes.Length - 1)
        {
            order++;
            size = size / 1024;
        }
        
        return $"{size:0.##} {sizes[order]}";
    }
}