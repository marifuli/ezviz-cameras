@model HikvisionService.Models.ViewModels.FootageViewModel
@{
    ViewData["Title"] = "Footage Archive";
}

<div class="px-6 py-4">
    <h1 class="text-3xl font-bold mb-2">Footage Archive</h1>
    <p class="text-gray-600 mb-6">Browse and download saved camera footage</p>

    <!-- Filter Form -->
    <div class="bg-white shadow rounded-lg mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-blue-600">Filter Options</h2>
        </div>
        <div class="px-6 py-4">
            <form asp-action="Index" method="get" id="filterForm" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label for="SelectedCameraId" class="block text-sm font-medium text-gray-700 mb-1">Camera</label>
                        <select asp-for="SelectedCameraId" class="block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                            <option value="">All Cameras</option>
                            @foreach (var camera in Model.Cameras)
                            {
                                <option value="@camera.Id">@camera.Name</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label for="StartDate" class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                        <input type="date" asp-for="StartDate" class="block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                    </div>
                    <div>
                        <label for="EndDate" class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                        <input type="date" asp-for="EndDate" class="block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                    </div>
                    <div>
                        <label for="FileType" class="block text-sm font-medium text-gray-700 mb-1">File Type</label>
                        <select asp-for="FileType" class="block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                            <option value="both">All Files</option>
                            <option value="video">Videos Only</option>
                            <option value="photo">Photos Only</option>
                        </select>
                    </div>
                </div>

                <div class="flex space-x-2 mt-4">
                    <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700">
                        <i class="fas fa-filter mr-2"></i> Apply Filters
                    </button>
                    <a href="@Url.Action("Index")" class="inline-flex items-center px-4 py-2 bg-gray-300 text-gray-700 text-sm font-medium rounded hover:bg-gray-400">
                        <i class="fas fa-sync mr-2"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="bg-white shadow rounded-lg mb-6">
        <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-blue-600">Footage Files</h2>
            <span class="text-sm text-gray-600">Found @Model.Files.Count files</span>
        </div>
        <div class="p-6">
            @if (Model.Files.Any())
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                    @foreach (var file in Model.Files)
                    {
                        <div class="bg-gray-50 rounded-lg shadow overflow-hidden flex flex-col h-full">
                            <div class="relative h-40 bg-gray-100 flex items-center justify-center overflow-hidden">
                                @if (file.FileType == "video")
                                {
                                    <img src="@file.ThumbnailPath" alt="Video thumbnail" class="object-cover w-full h-full" />
                                    <div class="absolute inset-0 flex items-center justify-center text-white text-4xl">
                                        <i class="fas fa-play-circle"></i>
                                    </div>
                                }
                                else
                                {
                                    <img src="@file.ThumbnailPath" alt="Photo thumbnail" class="object-cover w-full h-full" />
                                }
                            </div>
                            <div class="p-4 flex-1 flex flex-col justify-between">
                                <div>
                                    <h5 class="font-semibold text-gray-800 truncate">@file.FileName</h5>
                                    <p class="text-sm text-gray-500 mt-1">
                                        <i class="fas fa-camera mr-1"></i> @file.CameraName<br />
                                        <i class="fas fa-calendar mr-1"></i> @file.FileStartTime.ToString("yyyy-MM-dd HH:mm")<br />
                                        <i class="fas fa-file mr-1"></i> @FormatBytes(file.FileSize)
                                    </p>
                                </div>
                                <div class="mt-3 flex space-x-2">
                                    @if (file.FileType == "video")
                                    {
                                        <button type="button" class="flex-1 inline-flex items-center justify-center px-2 py-1 bg-blue-400 text-white text-sm font-medium rounded hover:bg-blue-500 play-video" data-path="@file.FilePath">
                                            <i class="fas fa-play mr-1"></i> Play
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="flex-1 inline-flex items-center justify-center px-2 py-1 bg-blue-400 text-white text-sm font-medium rounded hover:bg-blue-500 view-image" data-path="@file.FilePath">
                                            <i class="fas fa-eye mr-1"></i> View
                                        </button>
                                    }
                                    <a href="@file.DownloadUrl" download class="flex-1 inline-flex items-center justify-center px-2 py-1 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700">
                                        <i class="fas fa-download mr-1"></i> Download
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-20 text-gray-400">
                    <i class="fas fa-search fa-3x mb-4"></i>
                    <p class="text-lg font-semibold mb-2">No footage files found matching your criteria.</p>
                    <p>Try adjusting your filters or selecting a different date range.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Video Player Modal -->
<div id="videoPlayerModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-white rounded-lg w-11/12 md:w-3/4 lg:w-1/2 overflow-hidden">
        <div class="flex justify-between items-center px-4 py-2 border-b border-gray-200">
            <h5 class="text-lg font-semibold">Video Player</h5>
            <button class="text-gray-600 hover:text-gray-800" onclick="document.getElementById('videoPlayerModal').classList.add('hidden')">&times;</button>
        </div>
        <div class="p-4">
            <video id="videoPlayer" controls class="w-full">
                <source src="" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
</div>

<!-- Image Viewer Modal -->
<div id="imageViewerModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-white rounded-lg w-11/12 md:w-3/4 lg:w-1/2 overflow-hidden">
        <div class="flex justify-between items-center px-4 py-2 border-b border-gray-200">
            <h5 class="text-lg font-semibold">Image Viewer</h5>
            <button class="text-gray-600 hover:text-gray-800" onclick="document.getElementById('imageViewerModal').classList.add('hidden')">&times;</button>
        </div>
        <div class="p-4 text-center">
            <img id="imageViewer" src="" alt="Full size image" class="mx-auto max-h-[80vh] object-contain" />
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Optional: Tailwind doesnâ€™t need much custom CSS, just for video overlay icons */
        .play-video i,
        .view-image i {
            pointer-events: none;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize date pickers with formatted dates
            const startDate = '@Model.StartDate.ToString("yyyy-MM-dd")';
            const endDate = '@Model.EndDate.ToString("yyyy-MM-dd")';
            
            $('#StartDate').val(startDate);
            $('#EndDate').val(endDate);
            
            // Play video button
            $('.play-video').click(function() {
                const videoPath = $(this).data('path');
                $('#videoPlayer source').attr('src', '/Footage/Download?path=' + encodeURIComponent(videoPath));
                $('#videoPlayer')[0].load();
                $('#videoPlayerModal').modal('show');
            });
            
            // View image button
            $('.view-image').click(function() {
                const imagePath = $(this).data('path');
                $('#imageViewer').attr('src', '/Footage/Download?path=' + encodeURIComponent(imagePath));
                $('#imageViewerModal').modal('show');
            });
            
            // Stop video when modal is closed
            $('#videoPlayerModal').on('hidden.bs.modal', function () {
                $('#videoPlayer')[0].pause();
            });
        });
    </script>
}

@functions {
    public string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        int order = 0;
        double size = bytes;
        
        while (size >= 1024 && order < sizes.Length - 1)
        {
            order++;
            size = size / 1024;
        }
        
        return $"{size:0.##} {sizes[order]}";
    }
}