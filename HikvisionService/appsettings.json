{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "None"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=./database.sqlite"
  },
  "CameraWorker": {
    "CheckIntervalSeconds": 60,
    "MaxConcurrentDownloadsPerCamera": 1
  },
  "BackgroundServices": {
    "CameraHealthCheck": {
      "IntervalMinutes": 5
    },
    "StorageMonitoring": {
      "IntervalMinutes": 15
    }
  },
  "AllowedHosts": "*"
}